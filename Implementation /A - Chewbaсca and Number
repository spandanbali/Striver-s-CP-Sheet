A - Chewba—Åca and Number

#include<bits/stdc++.h>
using namespace std;
#define ll long long
int main(){
    ll x; cin>> x;
    vector<ll> v;
    while(x != 0){
        v.push_back(x % 10);
        x /= 10;
    }
    reverse(v.begin(), v.end());
    cout<<endl;
    for(int i=0; i<v.size(); i++){
        if(i == 0 && v[0] == 9){
            continue;
        }
        else if(v[i] >= 5){
            v[i] = 9 - v[i];
        }
    }
    for(auto it : v) cout<<it;
    return 0;
}
